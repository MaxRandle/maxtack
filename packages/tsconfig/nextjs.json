{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Config for Next.js apps",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
